        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppServ"
        mc:Ignorable="d"
        Title="Serveur" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="textBoxResponses" BorderThickness="3" Height="50" Margin="30" Text="{Binding Path=ClientMessage}" />
            
            

            <Label Margin="50" HorizontalAlignment="Center" FontSize="28" Content="Chat Serveur" />
        </StackPanel>
    </Grid>
</Window>
